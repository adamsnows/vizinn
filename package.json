{
  "name": "vizinn-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Vizinn monorepo containing frontend and backend applications",
  "scripts": {
    "dev:app": "pnpm --filter ./packages/frontend-app run start",
    "dev:backend": "cd packages/backend && poetry run uvicorn backend.app:app --reload",
    "dev": "pnpm -r --workspace-concurrency Infinity run dev",
    "start:backend": "cd packages/backend && poetry run uvicorn backend.app:app --reload",
    "start": "concurrently \"cd packages/frontend-app && expo start --dev-client\" \"pnpm start:backend\" --names \"FRONTEND,BACKEND\" --prefix-colors \"blue,green\" --kill-others-on-fail",
    "build:app": "pnpm --filter ./packages/frontend-app run build",
    "build:packages": "pnpm --filter \"./packages/**\" run build",
    "build": "pnpm build:packages && pnpm build:app",
    "lint:app": "pnpm --filter ./packages/frontend-app run lint",
    "test:app": "pnpm --filter ./packages/frontend-app run test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
